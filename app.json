{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "nl.danielvanbreda.gaquery",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Google Assistant Query",
    "nl": "Google Assistant Vraag"
  },
  "description": {
    "en": "Send a text query to Google Assistant",
    "nl": "Stuur een vraag aan Google Assistant"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "DaniÃ«l van Breda",
    "email": "email@danielvanbreda.nl"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Query",
          "nl": "Vraag"
        },
        "id": "query",
        "hint": {
          "en": "Send a query to Google Assistant",
          "nl": "Stuur een vraag naar Google Assistant"
        },
        "titleFormatted": {
          "en": "Ask [[query]] to Google Assistant on [[speaker]]. New conversation: [[new]]",
          "nl": "Vraag [[query]] naar Google Assistant op [[speaker]]. Nieuw gesprek: [[new]]"
        },
        "args": [
          {
            "type": "text",
            "name": "query",
            "placeholder": {
              "en": "query",
              "nl": "vraag"
            }
          },
          {
            "type": "autocomplete",
            "name": "speaker",
            "title": {
              "en": "Speaker/Display",
              "nl": "Speaker/Scherm"
            },
            "placeholder": {
              "en": "Select speaker...",
              "nl": "Selecteer speaker..."
            }
          },
          {
            "type": "checkbox",
            "name": "new",
            "placeholder": {
              "en": "New conversation?",
              "nl": "Nieuw gesprek?"
            }
          }
        ],
        "tokens": [
          {
            "name": "response",
            "type": "string",
            "title": {
              "en": "Response",
              "nl": "Antwoord"
            },
            "example": {
              "en": "The weather is sunny today",
              "nl": "Het weer is zonnig vandaag"
            }
          },
          {
            "name": "device_action",
            "type": "string",
            "title": {
              "en": "Device Action",
              "nl": "Apparaat Actie"
            },
            "example": {
              "en": "{\"type\":\"turn_on\",\"device\":\"lights\"}",
              "nl": "{\"type\":\"turn_on\",\"device\":\"lights\"}"
            }
          }
        ]
      },
      {
        "title": {
          "en": "Stop conversation",
          "nl": "Stop gesprek"
        },
        "id": "stop",
        "hint": {
          "en": "Stop the current Google Assistant conversation",
          "nl": "Stop het huidige Google Assistant gesprek"
        },
        "titleFormatted": {
          "en": "Stop Google Assistant conversation",
          "nl": "Stop Google Assistant gesprek"
        }
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Google Assistant Driver"
      },
      "class": "other",
      "capabilities": [
        "last_query",
        "last_response",
        "last_device_action"
      ],
      "capabilitiesOptions": {
        "last_query": {
          "title": {
            "en": "Last Query",
            "nl": "Laatste Vraag"
          },
          "getable": true,
          "setable": false
        },
        "last_response": {
          "title": {
            "en": "Last Response",
            "nl": "Laatste Antwoord"
          },
          "getable": true,
          "setable": false
        },
        "last_device_action": {
          "title": {
            "en": "Last Device Action",
            "nl": "Laatste Apparaat Actie"
          },
          "getable": true,
          "setable": false
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "cloud"
      ],
      "images": {
        "small": "/drivers/google-assistant-driver/assets/images/small.png",
        "large": "/drivers/google-assistant-driver/assets/images/large.png",
        "xlarge": "/drivers/google-assistant-driver/assets/images/xlarge.png"
      },
      "id": "google-assistant-driver",
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "repair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        }
      ]
    }
  ],
  "capabilities": {
    "last_device_action": {
      "type": "string",
      "title": {
        "en": "Last Device Action",
        "nl": "Laatste Apparaat Actie"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "last_query": {
      "type": "string",
      "title": {
        "en": "Last Query",
        "nl": "Laatste Vraag"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "last_response": {
      "type": "string",
      "title": {
        "en": "Last Response",
        "nl": "Laatste Antwoord"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    }
  }
}